<%- include('../partials/header', { title: 'Products' }) %>
<div class="content p-6 bg-gray-100 min-h-screen">
  <div class="header-row flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold">Products (<%= products.length %>)</h2>
    <button
      id="openModalButton"
      class="bg-yellow-500 p-2 rounded-lg text-black"
    >
      + Add Product
    </button>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200">
      <thead class="bg-gray-200">
        <tr>
          <th class="py-3 px-4 border-b">Image</th>
          <th class="py-3 px-4 border-b">Name</th>
          <th class="py-3 px-4 border-b">Description</th>
          <th class="py-3 px-4 border-b">Category</th>
          <th class="py-3 px-4 border-b">Price</th>
          <th class="py-3 px-4 border-b">Stock</th>
          <th class="py-3 px-4 border-b">Status</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr>
          <td class="py-3 px-4 border-b">
            <img
              src="<%= product.image %>"
              alt="<%= product.name %>"
              class="h-16 w-16 object-cover"
            />
          </td>
          <td class="py-3 px-4 border-b text-center"><%= product.name %></td>
          <td class="py-3 px-4 border-b text-center">
            <%= product.description %>
          </td>
          <td class="py-3 px-4 border-b text-center">
            <%= product.category %>
          </td>
          <td class="py-3 px-4 border-b text-center"><%= product.price %></td>
          <td class="py-3 px-4 border-b text-center">
            <%= product.totalStock || product.stock %>
          </td>
          <td class="py-3 px-4 border-b text-center"><%= product.status %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- Modal -->
<div
  id="productModal"
  class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden"
>
  <div class="bg-white p-6 rounded-lg w-96">
    <h2 class="text-2xl mb-4">Add Product</h2>
    <form
      id="productForm"
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3"
    >
      <div class="mb-4">
        <label class="block text-gray-700">Name</label>
        <input
          type="text"
          id="name"
          class="w-full p-2 border border-gray-300 rounded"
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Description</label>
        <textarea
          id="description"
          class="w-full p-2 border border-gray-300 rounded"
        ></textarea>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Category</label>
        <input
          type="text"
          id="category"
          class="w-full p-2 border border-gray-300 rounded"
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Price</label>
        <input
          type="number"
          id="price"
          class="w-full p-2 border border-gray-300 rounded"
          step="0.01"
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Image URL</label>
        <input
          type="text"
          id="image"
          class="w-full p-2 border border-gray-300 rounded"
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Total Stock</label>
        <input
          type="number"
          id="totalStock"
          class="w-full p-2 border border-gray-300 rounded"
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Current Stock</label>
        <input
          type="number"
          id="currentStock"
          class="w-full p-2 border border-gray-300 rounded"
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Status</label>
        <select id="status" class="w-full p-2 border border-gray-300 rounded">
          <option value="sufficient">Sufficient</option>
          <option value="excess">Excess</option>
          <option value="low">Low</option>
        </select>
      </div>
    </form>
    <div class="flex justify-between">
      <button
        type="button"
        id="closeModalButton"
        class="bg-gray-500 text-white py-2 px-4 rounded"
      >
        Close
      </button>
      <button type="submit" class="bg-yellow-500 text-white py-2 px-4 rounded">
        Save
      </button>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
